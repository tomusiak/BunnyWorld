<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayActivity">

    <Button
        android:id="@+id/draw"
        android:layout_width="100dp"
        android:layout_height="wrap_content"

        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@id/drawView"

        android:text="Draw"
        app:layout_constraintStart_toStartOf="parent">

    </Button>

    <Button
        android:id="@+id/erase"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@id/drawView"
        android:text="Erase"
        app:layout_constraintStart_toStartOf="parent">

    </Button>

    <Button
        android:id="@+id/save"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@id/drawView"
        android:text="Save"
        app:layout_constraintStart_toStartOf="parent"></Button>

    <Spinner
        android:id="@+id/colorSpinner"
        android:layout_width="93dp"
        android:layout_height="25dp"
        android:layout_marginStart="300dp"
        android:layout_marginLeft="300dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@id/drawView"
        android:spinnerMode="dropdown"
        app:layout_constraintStart_toStartOf="parent"></Spinner>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toTopOf="@id/drawView"
        tools:layout_editor_absoluteX="66dp" />

    <edu.stanford.cs108.bunnyworld.DrawView
        android:id="@+id/drawView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintStart_toStartOf="@+id/draw" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="0dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@id/drawView"
        tools:layout_editor_absoluteX="27dp" />


</android.support.constraint.ConstraintLayout>
